
<div id="form">
    <form action="/signup" method="POST">
        <label for="input-username">Username</label>
        <input type="text" name="username" id="input-username" placeholder="Your username">

        <label for="input-email">Email</label>
        <input type="email" name="email" id="input-email " placeholder="Your email">

        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********">

        <button type="submit">Create account</button>

        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>